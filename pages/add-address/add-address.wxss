.container {
  padding: 32rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.form-group {
  background: #fff;
  border-radius: 12rpx;
  padding: 0 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  min-height: 100rpx;
  border-bottom: 1rpx solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 180rpx;
  font-size: 28rpx;
  color: #333;
}

input {
  flex: 1;
  font-size: 28rpx;
}

.arrow {
  color: #999;
  margin-left: 10rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

/* 弹出的地区选择器 */
.region-picker-popup, .region-modal {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  z-index: 1000;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

/* 表单项中的地区选择器 */
.form-item .region-picker {
  position: static;
  background: none;
  z-index: 1;
  max-height: none;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex: 1;
  font-size: 28rpx;
}

/* 地区选择器基本样式 */
.region-picker {
  flex: 1;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.region-header {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.selected-path {
  padding: 20rpx 24rpx;
  background: #f8f8f8;
  font-size: 26rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
  white-space: nowrap;
  overflow-x: auto;
}

.selected-item {
  display: inline-block;
  color: #07c160;
}

.separator {
  margin: 0 10rpx;
  color: #999;
}

.region-header .back {
  position: absolute;
  left: 24rpx;
  color: #07c160;
  font-size: 28rpx;
}

.region-header .title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
}

.region-header .confirm {
  position: absolute;
  right: 24rpx;
  color: #07c160;
  font-size: 28rpx;
}

.region-list {
  margin-top: auto;
  flex: 1;
  overflow-y: auto;
  padding: 0 24rpx;
}

.region-item {
  padding: 24rpx 0;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
}

.region-item:last-child {
  border-bottom: none;
}

.region-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
}
.location {
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}

.location image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.location text {
  font-size: 24rpx;
  color: #07c160;
}

.switch-item {
  justify-content: space-between;
}

.btn-area {
  margin-top: 60rpx;
  padding: 0 30rpx;
}

.submit-btn {
  background: #07c160;
  color: #fff;
  border-radius: 12rpx;
}

.region-picker text:first-child {
  color: #999;
}